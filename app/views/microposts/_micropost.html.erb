<li id="<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar_user_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= t "microposts.micropost.post"%> <%= time_ago_in_words(micropost.created_at) %> <%= t "microposts.micropost.ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("microposts.micropost.delete"), micropost, method: :delete,
        data: { confirm: t("microposts.micropost.you_sure") } %>
    <% end %>
  </span>
</li>
