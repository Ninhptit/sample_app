<li>
  <%= gravatar_for user, size: Settings.gravatar_user_size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !user.current_user?(current_user) %>
    | <%= link_to t("users.user.delete"), user, method: :delete,
        data: { confirm: t("users.user.you_sure") } %>
  <% end %>
</li>
